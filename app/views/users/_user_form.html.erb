<p>
  <label for="user_name" class="required">Your username <%= error_on(@user, :name) %></label>
  <%= f.text_field :name %>
</p>
<p>
  <label for="user_email" class="required">Your e-mail address <%= error_on(@user, :email) %></label>
  <%= f.text_field :email %>
</p>
<p>
  <label for="user_github_username">Your GitHub username <%= error_on(@user, :github_username) %></label>
  <%= f.text_field :github_username %>
</p>
<p>
  <label for="user_twitter_username">Your Twitter username <%= error_on(@user, :twitter_username) %></label>
  <%= f.text_field :twitter_username %>
</p>

<%= f.hidden_field :identity_url %>
